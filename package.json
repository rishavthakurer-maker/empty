{
  "name": "vehicle-tycoon",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "cap:sync": "cap sync",
    "cap:android": "cap open android",
    "cap:build": "npm run build && cap sync",
    "android:dev": "npm run build && cap sync && cap open android",
    "android:build:debug": "npm run build && cap sync && cd android && ./gradlew assembleDebug",
    "android:build:release": "npm run build && cap sync && cd android && ./gradlew bundleRelease",
    "android:install": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "android:logs": "adb logcat | grep -i vehicletycoon"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0"
  },
  "optionalDependencies": {
    "@react-native-firebase/app": "^18.0.0",
    "@react-native-firebase/analytics": "^18.0.0"
  }
}